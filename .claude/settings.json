{
  "mcpServers": {
    "notion": {
      "command": "npx",
      "args": ["-y", "@notionhq/notion-mcp-server"],
      "env": {
        "NOTION_API_KEY": "${NOTION_API_KEY}"
      }
    }
  },
  "permissions": {
    "allow": [
      "mcp__notion__*",
      "Bash(git *)",
      "Bash(npm *)",
      "Bash(node *)"
    ]
  }
}
